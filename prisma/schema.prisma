generator client {
  provider = "prisma-client-js"
  
  // The 'seed' configuration must be nested inside a 'generator' block.
  seed {
    command = "node prisma/seed.js" 
  }
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
}

model Product {
  id           Int      @id @default(autoincrement())
  name         String
  description  String
  price        Float
  createdAt    DateTime @default(now())
}